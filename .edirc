# sample edirc

# important fields
nick=edirc
host=irc.freenode.net
port=6667
[[ -r ~/.password ]] && source ~/.password
# change this to your nick
owner=izabera

# all the rest
user=edirc
mode=0
realname="edirc: the ed bot"
channels=( "#edirc" )

# set it to the empty string to use ed "interactively"
trigger=:
# auths with nickserv
nickserv=yes
# log everything
log=no
timeformat=%T
# set -x
trace=no
# upload to arin.ga  (requires inotifywait and curl)
upload=yes
# max number of characters to send in a single line
linewidth=250


